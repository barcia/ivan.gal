---
import Layout from "@/components/layouts/Root.astro";
import ArticlesList from "@/components/ui/ArticlesList.astro";
import SessionList from "@/components/ui/SessionList.astro";
import getCollectionArticles from "@/utils/getCollectionArticles";
import getCollectionPhotos from "@/utils/getCollectionPhotos";

const articles = await getCollectionArticles(3);
const sessions = await getCollectionPhotos(3);
---

<Layout title="Iván Barcia" description="Sitio web personal de Iván Barcia.">
	<div class="flex flex-col gap-16 py-8">
		<header>
			<h1 class="font-serif text-3xl md:text-5xl">Iván Barcia</h1>
			<span class="text-foreground-light text-sm"> * * * </span>
		</header>
		<section class="flex flex-col gap-4">
			<div class="flex items-center justify-between">
				<h2 class="font-serif text-2xl md:text-3xl">
					Artigos recentes
				</h2>
				<a
					href="/artigos"
					class="text-foreground-light hover:text-foreground-muted text-sm"
					>Ver todos</a
				>
			</div>
			<ArticlesList articles={articles} />
		</section>
		<section class="flex flex-col gap-4">
			<div class="flex items-center justify-between">
				<h2 class="font-serif text-2xl md:text-3xl">
					Fotografías recentes
				</h2>
				<a
					href="/fotografia"
					class="text-foreground-light hover:text-foreground-muted text-sm"
					>Ver todos</a
				>
			</div>
			<SessionList sessions={sessions} />
		</section>
	</div>
</Layout>
