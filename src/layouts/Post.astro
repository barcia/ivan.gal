---
import Layout from './Layout.astro';
import Date from '../components/Date.astro'
import Breadcrumbs from '../components/Breadcrumbs.astro'

const { post } = Astro.props;

const { Content } = await post.render();

const breadcumbs = [
	{
		label: 'Blog',
		slug: '/blog/',
		current: false
	},
	{
		label: post.data.title,
		slug: `/blog/${post.slug}`,
		current: true
	}
]
---

<Layout title={post.data.title}>
  <article class="Article">
    <header>
      <Breadcrumbs data={breadcumbs}  />
      <h1 class="ArticleTitle">{ post.data.title }</h1>
      <Date date={post.data.pubDate} type='full'/>
    </header>
    <div class="Prose">
      <Content />
    </div>
  </article>
</Layout>

<style>
  .Article {
    & .Datetime {
        font-size: 0.9rem;
        color: var(--text-light);
        pointer-events: none;
        display: flex;
        align-items: center;

        & span:not(:last-child)::after {
            content: '·';
            margin: 0 0.25em;
        }            
    }
}

.ArticleTitle {
    font-size: 2rem;
    line-height: 1.3;
    margin: 0;
    margin-bottom: 0.5rem;

    @media screen and (max-width: 720px) {
        font-size: 1.8rem;
    }
}

.Prose {
    max-width: 65ch;
    margin: 2rem auto;
    font: 1.25rem/1.6 system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;

    @media screen and (max-width: 720px) {
        font-size: 1.1rem;
    }

    & img {
        max-width: 100%;

        &::after {
            content: 'aaa';
            display: block;
            padding-bottom: 100%;
        }

        @media screen and (max-width: 720px) {
            max-width: calc(100% + 2rem);
            margin-inline: -1rem;
        }
    }

    & a[href^="http"]:not([href^="https://ivan.gal"])::after,
    a[href^="https://"]:not([href^="https://ivan.gal"])::after {
        content: '↗';
        display: inline-block;
        font-size: 0.6em;
        margin-inline-start: 0.2em;
        vertical-align: top;
    }

    & blockquote {
        margin: 1rem 0;
        padding: 0.5rem 0.75rem;
        border-left: 0.25rem solid var(--brand-dark);
        color: var(--text-light);
        font-style: italic;
        font-size: 1.1em;
    }

    & h1, h2 {
        font-size: 1.4em;
    }

    & h1, h2, h3, h4, h5, h6 {
        margin-block: 1.5em 1em;
    }

    & pre {
        padding: 1rem;
        font-size: 1rem;
        font-family: ui-monospace,SFMono-Regular,Menlo,Monaco,Consolas,Liberation Mono,Courier New,monospace;

        @media screen and (max-width: 720px) {
            max-width: calc(100% + 2rem);
            margin-inline: -1rem;
        }
    }

    & > *:first-child {
        margin-block-start: 0;
    }

    & > *:last-child {
        margin-block-end: 0;
    }

}

</style>
